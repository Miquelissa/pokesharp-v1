<Window x:Class="Pokesharp.Encounter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokesharp"
        mc:Ignorable="d"
        Title="Encounter" Height="450" Width="419" ResizeMode="NoResize" Initialized="Window_Initialized" Closed="Window_Closed">
    <Grid>
        <Button x:Name="ButtonBattle" Content="Battle" HorizontalAlignment="Left" Margin="59,296,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="ButtonBattle_Click"/>
        <Button x:Name="ButtonCatch" Content="Catch" HorizontalAlignment="Left" Margin="123,296,0,0" VerticalAlignment="Top" Width="153" Height="60" Click="ButtonCatch_Click"/>
        <Button x:Name="ButtonRun" Content="Run" HorizontalAlignment="Left" Margin="281,296,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="ButtonRun_Click"/>
        <Label x:Name="LabelPokemonName" Content="Pokemon Name&#xA;" HorizontalAlignment="Left" Margin="34,45,0,0" VerticalAlignment="Top" Height="34" FontFamily="Courier New" FontSize="24" Width="331" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="108,98,137,155" x:Name="ImagePokemonImage" Width="168" Height="168"/>
    </Grid>
</Window>
